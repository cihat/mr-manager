{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**",
          "read": true,
          "write": true
        },
        {
          "path": "**",
          "read": true,
          "write": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".*"
            }
          ]
        },
        {
          "name": "exec-npx",
          "cmd": "npx",
          "args": [
            {
              "validator": ".*"
            }
          ]
        }
      ]
    },
    "fs:default",
    "dialog:default",
    "os:default",
    "log:default"
  ]
}